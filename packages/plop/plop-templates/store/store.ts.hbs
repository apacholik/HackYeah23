import { create } from "zustand";

type State = {
  bears: number;
  actions: {
    increaseBearsCount: (by: number) => void;
    reset: () => void;
  };
};

const initialState: Omit<State, "actions"> = {
  bears: 0,
};

/** Documentation for {{pascalCase name}} helper */
const use{{pascalCase name}} = create<State>((set) => ({
  ...initialState,
  actions: {
    increaseBearsCount: (by) => set((state) => ({ bears: state.bears + by })),
    reset: () => set(initialState),
  },
}));

export const useBears = () => use{{pascalCase name}}((state) => state.bears);
export const useBearsActions = () => use{{pascalCase name}}((state) => state.actions);
